<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:tag="back"
        android:background="#eee"
         >

        <Button
            android:id="@+id/example_row_b_action_1"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/example_row_b_action_2"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:text="删除"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/example_row_b_action_3"
            android:layout_width="wrap_content"
            android:text="编辑"
            android:layout_gravity="center"
            android:layout_height="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/front"
        android:padding="@dimen/paddingbottom"
        android:orientation="horizontal"
        android:tag="front"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="80dp" >
		<ImageView
		    android:id="@+id/example_row_tv_picture"
			android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    />
		<LinearLayout
		    android:id="@+id/in"
		    android:orientation="vertical"  
        	android:background="#ffffff"
        	android:layout_width="match_parent"
        	android:paddingBottom="@dimen/paddingbottom"
        	android:layout_height="wrap_content"
        	>
			<TextView
            	android:id="@+id/example_row_tv_title"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:textSize="18sp"
            	
             	/>
			<TextView
            	android:id="@+id/example_row_tv_describe"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:textSize="18sp"	
             	/>
		</LinearLayout>
    </LinearLayout>

</FrameLayout>